{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["@types/node"],
   }, 
    "include": [
        "./src/**/*.ts"
    ],  
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true 
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
